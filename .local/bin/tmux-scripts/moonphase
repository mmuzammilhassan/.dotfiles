#!/bin/sh

counter=0

while :; do
  # Calculate current frame (0, 1, 2, or 3)
  frame=$((counter % 4))

  case $frame in
    0) icon="ğŸŒ‘ğŸŒ‘ğŸŒ‘ğŸŒ‘" ;;
    1) icon="ğŸŒ“ğŸŒ“ğŸŒ“ğŸŒ“" ;;
    2) icon="ğŸŒ•ğŸŒ•ğŸŒ•ğŸŒ•" ;;
    3) icon="ğŸŒ—ğŸŒ—ğŸŒ—ğŸŒ—" ;;
  esac

  # Increment the counter
  counter=$((counter + 1))

  # Update Tmux
  tmux set-option -g status-right " $icon "

  # Sleep 0.5 makes the animation look smoother than 1
  sleep 0.5
done
